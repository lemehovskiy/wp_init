{
  "project_name": null,
  "project_slug": null,
  "project_description": "This is our awesome personal blog WordPress theme.",
  "db_user": "",
  "db_password": "",
  "build_system": "webpack",

  "local-plugins": {
    "acf-repeater": {
      "path": "wp-init-src/plugins/acf-repeater",
      "install": true
    },
    "advanced-custom-fields-pro": {
      "path": "wp-init-src/plugins/advanced-custom-fields-pro",
      "install": true
    }
  },
  "remote-plugins": {
    "contact-form-7": {
      "url": "https://downloads.wordpress.org/plugin/contact-form-7.4.9.zip",
      "install": true
    },
    "simple-custom-post-order": {
      "url": "https://downloads.wordpress.org/plugin/simple-custom-post-order.zip",
      "install": true
    }
  },
  "remove_wp_core_files": [
    "wp-content/themes/twentyfifteen",
    "wp-content/themes/twentyseventeen",
    "wp-content/themes/twentysixteen",
    "wp-content/themes/twentynineteen",
    "wp-content/plugins/akismet",
    "wp-content/plugins/hello.php"
  ],
  "remove_starter_theme_files": [
    "core/post_types/sample.php",
    "core/taxonomies/sample.php",
    ".gitignore"
  ],
  "post_types": [
    {
      "slug": "news",
      "name": "News",
      "singular_name": "News"
    }
  ],
  "taxonomies": [
    {
      "slug": "news-category",
      "name": "News Categories",
      "singular_name": "News Category",
      "assign_to_post_type": "news"
    }
  ],
  "gitignore": [
    ".idea",
    "**/build",
    "**/node_modules",
    "**/DS_Store",
    "wp-config.php"
  ],
  "flexible_templates": [
    {
      "name": "Page builder",
      "slug": "page_builder",
      "sections": [
        "intro_1",
        "intro_2",
        "special_slider"
      ]
    }
  ],

  "download_theme_assets": [
    {
      "download_url": "https://github.com/lemehovskiy/lem_mixins/archive/master.zip",
      "path_from": "lem_mixins-master/src/sass/lem_mixins",
      "path_to": "{THEME_DIRECTORY}/src/css/lem_mixins"
    }
  ]
}